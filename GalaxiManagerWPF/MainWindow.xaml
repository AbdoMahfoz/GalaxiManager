<Window x:Class="GalaxiManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalaxiManagerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="LightGray">
            <Label Content="Navigation" HorizontalAlignment="Center"/>
            <Button Margin="10,20,10,0" Content="Check-in/out"/>
            <Button Margin="10,6,10,0" Content="Set-up pricing"/>
            <Button Margin="10,6,10,0" Content="Add new things"/>
        </StackPanel>
        <StackPanel Name="CheckInOutPanel" Grid.Column="1" Background="WhiteSmoke" Visibility="Visible">
            <Label Content="Please enter a phone number" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="15"/>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Margin="0,0,5,0" HorizontalAlignment="Right" Width="200"/>
                <Button Margin="5,0,0,0" Grid.Column="1" Content="Search" HorizontalAlignment="Left" Width="70"/>
                
            </Grid>
        </StackPanel>
    </Grid>
</Window>
